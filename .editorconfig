root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,groovy,kt}]
indent_style = space
indent_size = 4
ij_continuation_indent_size = 8

[*.{xml,properties,json}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false